<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile"
    android:orientation="vertical"
    android:background="@color/back"
    tools:ignore="ExtraText">
    <ImageView
        android:id="@+id/profilepic"
        android:layout_width="130dp"
        android:layout_height="130dp"

        android:src="@drawable/ic_baseline_account_circle_24"
        android:background="@drawable/account_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"

         />
<TextView
    android:id="@+id/namereg"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="10dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/text_corner"
    android:text="Dhanuanth"
    android:textAlignment="center"
    android:padding="4dp"
    android:textSize="24sp"
    android:textColor="#000"
    android:textStyle="bold"
    android:fontFamily="@font/gayatri"

    />
    <TextView
        android:id="@+id/mobilenumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_corner"
        android:text="25369893"
        android:padding="4dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"

        android:fontFamily="@font/gayatri"

        />
    <TextView
        android:id="@+id/emailaddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_corner"
        android:text="dhanukannur"
        android:padding="4dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="@font/gayatri"
        />
    <TextView
        android:id="@+id/deliveryaddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_corner"
        android:text="alakapuri"
        android:padding="4dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:fontFamily="@font/gayatri"
        />






</LinearLayout>
